<h3>Telegram settings</h3>
<div class="box tabular settings">
  <p>

  </p>
  <div class="box tabular settings">
    <h4>Work days</h4>


      <ul class="work-days">
        <li>
          <label>From</label>
          <%= time_field_tag "settings[work_day_from]", @settings["work_day_from"] %>
        </li>
        <li>
          <label>to</label>
          <%= time_field_tag "settings[work_day_to]", @settings["work_day_to"] %>
        </li>
        <% Date::DAYNAMES.each_with_index do |day, i| %>
          <li>

            <%= check_box_tag "settings[work_days_#{i}]", '1',
                              @settings["work_days_#{i}"] %>
            <label><%= day %></label>
          </li>
        <% end %>

      </ul>


  </div>
  <br>


  <div class="box tabular settings fourth alarm">
    <h4>Alarm priorities</h4>
    <% IssuePriority.find_each do |priority| %>
      <p>

        <label><%= priority.name %></label>
        <%= check_box_tag "settings[alarm_priority_#{priority.id}]", '1',
                          @settings["alarm_priority_#{priority.id}"] %>
      </p>

    <% end %>
  </div>
  <% %w(new work_in_progress feedback).each do |notification_group| %>
    <div class="box tabular settings fourth">
      <h4><%= notification_group.humanize %> statuses</h4>
      <% IssueStatus.find_each do |status| %>
        <p>

          <label><%= status.name %></label>
          <%= check_box_tag "settings[#{notification_group}_status_#{status.id}]", '1',
                            @settings["#{notification_group}_status_#{status.id}"] %>
        </p>

      <% end %>
    </div>
  <% end %>
</div>
<h3>E-mail settings</h3>
<div class="box tabular settings">
  <p>
    <label for="settings_cc">CarbonCopy To</label>
    <%= select_tag('settings[cc]',
                   options_for_select(User.where(status: 1).collect { |u| [u.name, u.mail] }, @settings['cc'])) %>
  </p>

  <p>
    <%= @settings['cc'] %>
  </p>

  <p>
    <label for="settings_header">Header</label>
    <%= text_area_tag 'settings[header]', @settings['header'] %>
  </p>

  <p>
    <label for="settings_footer">Footer</label>
    <%= text_area_tag 'settings[footer]', @settings['footer'] %>
  </p>

  <% Tracker.find_each do |tracker| %>

    <div class="box tabular settings">
      <p>
        <label><%= tracker.name %></label>
      </p>

      <p>
        <label for="settings_duration">Reminder Interval (in Days)</label>
        <%= text_field_tag "settings[#{tracker.id}_update_duration]", @settings["#{tracker.id}_update_duration"] %></p>
    </div>

  <% end %>
</div>


<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'tables', plugin: 'redmine_intouch' %>
<% end %>
